<div class="container">

  <div class="row mt-5 mb-4">
    <h4><%= @user.name %>さんの会員情報編集</h4>
  </div>
  
  <div class="row">
    <%= form_with model: [:admin,@user], url: admin_update_user_path(@user.id), method: :patch do |f| %>
      <div class="form-group row">
        <label class="col-4"><%= image_tag @user.get_profile_image(100,100) %></label>
      </div>
        
      <div class="form-group row">
        <label class="col-4">会員ID</label>
        <div class="col-5"><%= @user.id %></div>
      </div>
        
      <div class="form-group row">
        <label class="col-4">名前</label>
        <div class="col-5"><%= f.text_field :name, size: "20x1" %></div>
      </div>
        
      <div class="form-group row">
        <label class="col-4">メールアドレス</label>
        <div class="col-5"><%= f.text_field :email, size: "30x1" %></div>
      </div>
        
      <div class="form-group row">
        <label class="col-4">会員ステータス</label>
        <div class="col-5">
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "有効" %>
          　<%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, "退会" %>
        </div>
      </div>
        
      <div class="form-group row">
        <div class="col-4"></div>
        <div class="col-5">
          <%= f.submit "変更を保存", class: "btn btn-success btn-sm" %>
        </div>
      </div>
    <% end %>
  </div>
  
</div>