<div class="container">
  
  <div class="row">
    <div class="mx-auto mt-5 mb-4">
      <h4>管理者ログイン</h4>
    </div>
  </div>

  <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
    <div class="row">  
      <div class="mx-auto">
        
        <div class="field mb-3 row">
          <div class="col-6"><%= f.label :email, "メールアドレス" %></div>
          <div class="col-6"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
        </div>

        <div class="field mb-3 row">
          <div class="col-6"><%= f.label :password, "パスワード" %></div>
          <div class="col-6"><%= f.password_field :password, autocomplete: "current-password" %></div>
        </div>

    <div class="row">
      <div class="actions mx-auto">
        <%= f.submit "ログイン", class: "btn btn-sm btn-primary" %>
      </div>
    </div>
  <% end %>
      
</div>
<%= render "admin/shared/links" %>