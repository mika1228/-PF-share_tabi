<div class="container">

  <div class="row">
    <div class="mt-4">
      <%= form_tag posts_path, method: :get, class: 'boards__searchForm' do %>
        <%= select_tag :category_id, options_from_collection_for_select(Category.all, :id, :name, params[:category_id]),
          { prompt: '--カテゴリで絞り込み検索--', onchange: 'submit(this.form);'} %>
      <% end %>
    </div>

    <div class="search-form mt-4 ml-5">
      <%= form_with url: search_path, method: :get, local: true do |f| %>
        <%= f.text_field :keyword, value: @keyword, placeholder: "キーワードで探す", size: "30x1" %>
        <%= f.submit "Search", class: "btn btn-info btn-sm" %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <%= render 'posts', posts: @posts %>
  </div>

</div>
