<div class="container">

  <div class="row mt-5 mb-4">
    <h4>新規投稿</h4>
  </div>
  
  <div class="row">
    <div class="mx-auto">
      <%= form_with model: @post do |f| %>
        <div class="form-group row">
          <div class="col-12"><%= f.file_field :post_image, accept: "image/*" %></div>
        </div>
        
        <div class="form-group row">
          <label class="col-5">日付</label>
          <div class="col-7"><%= f.date_field :date %></div>
        </div>
        
        <div class="form-group row">
          <label class="col-5">スポット名</label>
          <div class="col-7"><%= f.text_field :spot_name, size: "30x1" %></div>
        </div>
        
        <div class="form-group row">
          <label class="col-5">都道府県</label>
          <div class="col-7"><%= f.select :prefecture, Post.prefectures.keys, {include_blank: "選択してください"}, { required: true } %></div>
        </div>
        
        <div class="form-group row">
          <label class="col-5">住所</label>
          <div class="col-7"><%= f.text_field :address, size: "30x1" %></div>
        </div>
        
        <div class="form-group row">
          <label class="col-5">カテゴリ</label>
          <div class="col-7"><%= f.collection_select :category_id, Category.all, :id, :name, prompt: "選択してください" %></div>
        </div>
        
        <div class="form-group row">
          <label class="col-5">コメント</label>
          <div class="col-7"><%= f.text_area :post_comment, size: "30x3" %></div>
        </div>
        
        <div class="form-group row">
          <label class="col-5">公開ステータス</label>
          <div class="col-7">
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, "公開" %>
            　<%= f.radio_button :is_active, :false %>
              <%= f.label :is_active, "非公開" %>
          </div>
        </div>
        
        <div class="form-group row">
          <div class="mx-auto">
            <%= f.submit "投稿", class: "btn btn-primary btn-sm" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  
</div>