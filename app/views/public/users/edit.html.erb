<div class="container">

  <div class="row mt-5 mb-4">
    <h4>プロフィール編集</h4>
  </div>

  <div class="row">
    <div class="mx-auto">
    <%= form_with model: [:public,@user], url: update_user_path(@user.id), method: :patch do |f| %>
      <div class="form-group row">
        <label class="col-3"><%= image_tag @user.get_profile_image(100,100) %></label>
        <div class="col-9"><%= f.file_field :profile_image, class: "form-control-file", accept: "image/*" %></div>
      </div>

      <div class="form-group row">
        <label class="col-3">名前</label>
        <div class="col-9"><%= f.text_field :name, size: "20x1" %></div>
      </div>

      <div class="form-group row">
        <label class="col-3">年齢</label>
        <div class="col-9"><%= f.select :age, [['未設定'], ['10代'], ['20代'], ['30代'], ['40代'], ['50代'], ['60代'], ['70代'], ['80代']] %></div>
      </div>

      <div class="form-group row">
        <label class="col-3">性別</label>
        <div class="col-9"><%= f.select :sex, [['未設定'],['男性'],['女性']], class: "form-control" %></div>
      </div>

      <div class="form-group row">
        <label class="col-3">自己紹介</label>
        <div class="col-9"><%= f.text_area :introduction, size: "30x3" %></div>
      </div>

      <div class="form-group row">
        <label class="col-3"></label>
        <div class="col-9"><%= f.submit "変更を保存", class: "btn btn-success btn-sm" %>
        　　<%= link_to "退会する", unsubscribe_path, class: "btn btn-danger btn-sm" %>
        </div>
      </div>
    <% end %>
    </div>
  </div>