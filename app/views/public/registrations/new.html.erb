<div class="container">
  
  <div class="row">
    <div class="mx-auto mt-5 mb-4">
      <h4>新規登録</h4>
    </div>
  </div>
 
  <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
      <div class="row">
        <div class="mx-auto">
        
          <div class="field mb-3 row">
            <div class="col-6"><%= f.label :name, "名前" %></div>
            <div class="col-6"><%= f.text_field :name, autofocus: true, autocomplete: "name" %></div>
          </div>
          
          <div class="field mb-3 row">
            <div class="col-6"><%= f.label :email, "メールアドレス" %></div>
            <div class="col-6"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
          </div>
        
          <div class="field mb-3 row">
            <div class="col-6"><%= f.label :password, "パスワード(#{@minimum_password_length}文字以上)" %></div>
            <div class="col-6"><%= f.password_field :password, autocomplete: "new-password" %></div>
          </div>

          <div class="field mb-3 row">
            <div class="col-6"><%= f.label :password_confirmation, "パスワード(確認用)" %></div>
            <div class="col-6"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
          </div>
          
        </div>
      </div>
      
      <div class="row">
        <div class="actions mx-auto">
          <%= f.submit "新規登録", class: "btn btn-sm btn-success" %>
        </div>
      </div>
      
  <% end %>
  
  <div class="row">
    <div class="mx-auto mt-5">
      <p>既に登録済みの方は
      <%= link_to "こちら", new_user_session_path %></p>
    </div>
  </div>
  
</div>